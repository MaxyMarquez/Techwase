{
  "version": 2,
  "builds": [
    {
      "src": "client/build/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "client/api/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "/client/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
